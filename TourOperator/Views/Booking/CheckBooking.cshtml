@model TourOperator.ViewModels.CheckBooking

@{
    ViewData["Title"] = "CheckBooking";
}

<h1>CheckBooking</h1>

<h4>CheckBooking</h4>
<hr />

@if (ViewBag.StatusMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.StatusMessage
    </div>
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingCode" class="control-label"></label>
                <input asp-for="BookingCode" class="form-control" />
                <span asp-validation-for="BookingCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Check Booking" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Hotel"  asp-action="Overview">Back Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
