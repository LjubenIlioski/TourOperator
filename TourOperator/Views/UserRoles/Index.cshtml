@using TourOperator.Models
@model List<TourOperator.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Roles</h1>


<a class="nav-link text-dark btn btn-danger" asp-area="Identity" asp-page="/Account/Register">Register new account </a>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
            <th>CRUD</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Email</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>
                <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-email="@user.Email">Manage Roles</a>
            </td>
            <td>
                <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Delete" asp-route-email="@user.Email">Delete User</a>
            </td>
        </tr>
        }
    </tbody>
</table>